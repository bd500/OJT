<core:FragmentDefinition
    xmlns:p13n="sap.m.p13n"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Create a new Bill"
        id="addBillDialog"
        contentHeight="60%"
    >
        <VBox
            id="dialogContainer"
            alignContent="Center"
            alignItems="Baseline"
        >
            <VBox>
                <FlexBox
                    justifyContent="Center"
                    width="100%"
                >
                    <VBox>
                        <HBox>
                            <VBox>
                                <Label text="Customer's Name:" />
                                <Input
                                    id='txtCustomer'
                                    placeholder="Enter name"
                                    required="true"
                                />
                            </VBox>
                            <VBox>
                                <Label text="Exporter's Name:" />
                                <Input
                                    placeholder="Enter name"
                                    id="txtExporter"
                                    required="true"
                                />
                            </VBox>
                            <VBox>
                                <Label text="Status" />
                                <Select
                                    id="selStatus"
                                    selectedKey="UNPAID"
                                >
                                    <core:Item
                                        key="UNPAID"
                                        text="UNPAID"
                                    />
                                    <core:Item
                                        key="PAID"
                                        text="PAID"
                                    />
                                </Select>
                            </VBox>
                        </HBox>
                        <HBox />
                        <VBox>
                            <Label text="Address" />
                            <Input
                                id="txtAddress"
                                value="244 Nguyen Van Linh"
                                required="true"
                            />
                        </VBox>
                        <Toolbar
                            class='separator'
                            width="100%"
                            height="1px"
                        />
                        <Label
                            text="Please choose Items you want to buy..."
                            design="Bold"
                        />
                        <HBox id="lbCreateItemContainer">
                            <VBox width="206px">
                                <Label text="Item" />
                            </VBox>
                            <VBox width="150px">
                                <Label text="Quantity" />
                            </VBox>
                            <VBox>
                                <Label text="Unit price" />
                            </VBox>
                            <VBox>
                                <Label text="Total" />
                            </VBox>
                        </HBox>
                        <VBox id="vbItems">
                            <HBox id="hbItem">
                                <ComboBox
                                    id="cbItems"
                                    placeholder="Choose an item"
                                    items="{
                                            path: 'items>/value',
                                            templateShareable: true
                                        }"
                                    required="true"
                                    selectionChange=".onChooseAddItem"
                                >
                                    <core:Item
                                        key="{items>ID}"
                                        text="{items>name}"
                                    />
                                </ComboBox>
                                <!-- <Input
                                    value="0"
                                    liveChange=".onInputQuantity"
                                /> -->
                                <StepInput
                                    width="150px"
                                    min="0"
                                    value="0"
                                    change=".onInputQuantity"
                                />
                                <Label
                                    text="0"
                                    width="80px"
                                    textAlign="Center"
                                />
                                <Label
                                    text="0"
                                    width="80px"
                                    textAlign="Center"
                                />
                                <VBox justifyContent="End">
                                    <Button
                                        type="Reject"
                                        icon="sap-icon://less"
                                        press=".onRemoveItem"
                                    />
                                </VBox>
                            </HBox>
                        </VBox>
                        <Toolbar
                            class='separator'
                            width="100%"
                            height="1px"
                        />
                    </VBox>
                </FlexBox>
            </VBox>

            <Button
                id="btnAddItem"
                type="Transparent"
                icon="sap-icon://add"
                text="Item"
                press=".onAppendItem"
            />
        </VBox>
        <VBox id="vbTotal">
            <HBox id="hbTotal">
                <Label text="Total($): " />
                <Label
                    id="createSubTotal"
                    design="Bold"
                    text="0"
                />
            </HBox>
        </VBox>
        <beginButton>
            <Button
                id="btnAdd"
                type="Accept"
                text="Add"
                press=".onAddNewDialog"
                icon="sap-icon://accept"
            />
        </beginButton>
        <endButton>
            <Button
                id="btnClose"
                type="Reject"
                text="Close"
                icon="sap-icon://reset"
                press=".onCloseDialog($event, 'addBillDialog')"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
