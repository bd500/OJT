<mvc:View
    xmlns:f="sap.f"
    controllerName="febill.controller.Base"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    height="100%"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <f:ShellBar
                id="header"
                title="OJT"
                homeIcon="https://i.imgur.com/9D6Arik.jpeg"
                menuButtonPressed=".onMenuToggle"
                showNotifications="true"
            >
                <f:profile>
                    <Avatar />
                </f:profile>
            </f:ShellBar>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation id="sideNav">
                <tnt:item>
                    <tnt:NavigationList itemSelect="onItemSelect">
                        <tnt:NavigationListItem
                            icon="sap-icon://home"
                            text="Home"
                            id="navItemHome"
                            key="home"
                        />
                        <tnt:NavigationListItem
                            icon="sap-icon://sales-order-item"
                            text="Bills"
                            id="navItemBills"
                            key="bills"
                        />
                        <tnt:NavigationListItem
                            id="navItemProducts"
                            icon="sap-icon://product"
                            text="Products"
                            key="products"
                        />
                        <tnt:NavigationListItem
                            id="navItemHistory"
                            icon="sap-icon://history"
                            text="History"
                            key="his"
                        />
                    </tnt:NavigationList>
                </tnt:item>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="home"
            >
                <pages>
                    <ScrollContainer
                        height="100%"
                        id="home"
                    >
                        <Text text="Home" />
                    </ScrollContainer>

                    <ScrollContainer
                        id="bills"
                        height="100%"
                        vertical="true"
                        horizontal="false"
                    >
                        <mvc:XMLView
                            viewName="febill.view.Bills"
                            type="XML"
                            height="100%"
                        />
                    </ScrollContainer>

                    <ScrollContainer
                        id="his"
                        height="100%"
                    >
                        <mvc:XMLView viewName="febill.view.History" />
                    </ScrollContainer>

                    <ScrollContainer
                        id="products"
                        height="100%"
                    >
                        <!-- <mvc:XMLView viewName="febill.view.Products"></mvc:XMLView> -->
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
