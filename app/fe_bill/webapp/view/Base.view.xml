<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    controllerName="febill.controller.Base"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    height="100%"
>
    <Page>
        <VBox>
            <FlexBox
                justifyContent="Center"
                width="100%"
            >
                <VBox>
                    <FlexBox>
                        <Label text="Create a new Bill:" />
                    </FlexBox>
                    <HBox>
                        <VBox>
                            <Label text="ID" />
                            <Input
                                id="editId"
                                editable="false"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Status" />
                            <Input
                                editable="false"
                                id="editStatus"
                                value="PAID"
                            />
                        </VBox>
                    </HBox>
                    <HBox>
                        <VBox>
                            <Label text="Customer:" />
                            <Input
                                id='editCustomer'
                                placeholder="Enter name"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Exporter:" />
                            <Input placeholder="Enter name" />
                        </VBox>
                    </HBox>
                    <VBox>
                        <Label text="Address" />
                        <Input
                            editable="false"
                            id="Address"
                            value="244 Nguyen Van Linh"
                        />
                    </VBox>
                    <Toolbar
                        class='separator'
                        width="100%"
                        height="1px"
                    />
                    <Label
                        text="Purchased Items"
                        design="Bold"
                    />
                    <VBox id="vbEditItemsContainer">
                        <HBox>
                            <VBox>
                                <Label text="Item" />
                                <Input value="Knife" />
                            </VBox>
                            <VBox>
                                <Label text="Quantity" />
                                <Input placeholder="Enter quantity" />
                            </VBox>
                            <VBox>
                                <Label text="Unit price" />
                                <Label text="120.99" />
                            </VBox>
                            <VBox>
                                <Label text="Total" />
                                <Label text="120.99 x 12" />
                            </VBox>
                        </HBox>
                    </VBox>
                    <Toolbar
                        class='separator'
                        width="100%"
                        height="1px"
                    />
                    <HBox>
                        <Label text="Subtotal: ($)" />
                        <Input
                            value="100"
                            editable="false"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
        </VBox>
    </Page>
</mvc:View>
