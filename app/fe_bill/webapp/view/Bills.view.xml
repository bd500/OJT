<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    controllerName="febill.controller.Bills"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    height="100%"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <!-- <ObjectHeader title="Bills" /> -->
        <content>
            <Table
                id="tbBills"
                items="{ path: 'bills>/value'}"
            >
                <headerToolbar>
                    <Toolbar design="Transparent">
                        <!-- <ToolbarSpacer  /> -->
                        <SearchField
                            id="search"
                            search=".onBillSearch"
                        />
                        <Button
                            type="Emphasized"
                            press=".onAddNewBill"
                            text="ADD"
                            icon="sap-icon://add"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://sort"
                            text="Sort"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://filter"
                            text="Filter"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://group"
                            text="Group"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="colID"
                        width="150px"
                    >
                        <Label
                            id="lbId"
                            text="ID"
                        />
                    </Column>
                    <Column width="180px">
                        <Text text="Customer" />
                    </Column>
                    <Column width="180px">
                        <Text text="Exporter" />
                    </Column>
                    <Column width="auto">
                        <Text text="Created At" />
                    </Column>
                    <Column width="160px">
                        <Text text="Total" />
                    </Column>
                    <Column width="75px">
                        <Text text="Status" />
                    </Column>
                    <Column width="65px">
                        <Text text="Action" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        press=".onBillDetails"
                        id="cliItem"
                        type="Active"
                    >
                        <cells>
                            <ObjectIdentifier title="{bills>ID}" />
                            <Text text="{bills>customer}" />
                            <Text text="{bills>exporter}" />
                            <Text text="{bills>createdAt}" />
                            <Text
                                text="{parts: [
                                            {path: 'bills>total'}
                                            
                                        ], 
                                            type: 'sap.ui.model.type.Currency',
                                            formatOptions: {
                                                showMeasure: true,
                                                oLocate: 'en_UK'
                                            }}"
                            />
                            <Text text="{bills>status}" />
                            <Button
                                icon="sap-icon://delete"
                                press=".onCancelOrder"
                                type="Default"
                                enabled="{= ${bills>status} === 'CANCEL' ? false : true }"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    id="btnFirstPage"
                    icon="sap-icon://close-command-field"
                    press=".onFirstPress"
                    tooltip="First"
                    type="Transparent"
                />
                <Button
                    id="btnPrevPage"
                    icon="sap-icon://navigation-left-arrow"
                    press=".onPrevPress"
                    tooltip="Previous"
                    type="Transparent"
                />
                <Text
                    id="PageTextId"
                    text="Page 1 of 1"
                />
                <Button
                    id="btnNextPage"
                    icon="sap-icon://navigation-right-arrow"
                    press=".onNextPress"
                    tooltip="Next"
                    type="Transparent"
                />
                <Button
                    id="btnLastPage"
                    icon="sap-icon://open-command-field"
                    press=".onLastPress"
                    tooltip="Last"
                    type="Transparent"
                />
            </OverflowToolbar>
        </content>
    </Page>
</mvc:View>
