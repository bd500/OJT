<mvc:View
    xmlns:commons="sap.suite.ui.commons"
    controllerName="febill.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
    height="100%"
    class="detailsView"
>
    <VBox>
        <!-- Item Info -->
        <ObjectHeader
            title="{detailsModel>/value/0/item/name}"
            number="{detailsModel>/value/0/item/price}"
            numberUnit="$"
            responsive="true"
            backgroundDesign="Transparent"
            class="headerObject"
        />

        <HBox class="stockInfo">
            <Label
                text="Stock "
                class="stockLabel"
            />
            <Text
                text="{detailsModel>/value/0/item/stock}"
                textAlign="Center"
                class="stockText"
            />
        </HBox>

        <!-- Item History Table -->
        <!-- <Table items="{detailsModel>/value}">
            <columns>
                <Column>
                    <Text text="Update Date" />
                </Column>
                <Column>
                    <Text text="Quantity Changes" />
                </Column>
                <Column>
                    <Text text="Note" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text
                            text="{detailsModel>dateFormatted}"
                        />
                        <Text text="{detailsModel>quantity}" />
                        <Text text="{detailsModel>note}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table> -->
    </VBox>
    <commons:Timeline
        id="historyTimeline"
        lazyLoading="true"
        growingThreshold="10"
        content="{detailsModel>/value}"
        showHeaderBar="false"
        showIcons="false"
        enableScroll="true"
    >
        <commons:content>
            <commons:TimelineItem
                dateTime="{detailsModel>date}"
                text="{detailsModel>note}"
                title="Stock change: {detailsModel>quantity}"
                status="{path: 'detailsModel>quantity',
                        formatter: '.formatter.formatItemChange'}"
            />
        </commons:content>
    </commons:Timeline>
</mvc:View>
