<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    controllerName="febill.controller.Bills"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    height="100%"
>
    <ObjectHeader title="Bills Management" />
    <Page id="page">
        <headerContent />
        <content>
            <Table
                id="tbBills"
                items="{ path: 'bills>/value'}"
            >
                <headerToolbar>
                    <Toolbar design="Transparent">
                        <!-- <ToolbarSpacer  /> -->
                        <SearchField
                            id="search"
                            search=".onBillSearch"
                        />
                        <Button
                            type="Emphasized"
                            press=".onAddNewBill"
                            text="ADD"
                            icon="sap-icon://add"
                        />
                        <Button
                            type="Emphasized"
                            text="Refresh"
                            icon="sap-icon://synchronize"
                            press=".onRefresh"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://sort"
                            text="Sort"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://filter"
                            text="Filter"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="colID"
                        width="120px"
                    >
                        <Label
                            id="lbId"
                            text="ID"
                        />
                    </Column>
                    <Column width="150px">
                        <Text text="Customer" />
                    </Column>
                    <Column width="150px">
                        <Text text="Exporter" />
                    </Column>
                    <Column width="auto">
                        <Text text="Created At" />
                    </Column>
                    <Column width="140px">
                        <Text text="Total" />
                    </Column>
                    <Column width="80px">
                        <Text text="Status" />
                    </Column>
                    <Column width="100px">
                        <Text
                            text="Action"
                            textAlign="Center"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        press=".onBillDetails"
                        id="cliItem"
                        type="Active"
                    >
                        <cells>
                            <ObjectIdentifier title="{bills>ID}" />
                            <Text text="{bills>customer}" />
                            <Text text="{bills>exporter}" />
                            <Text
                                text="{path: 'bills>createdAt', 
                                    formatter: '.formatter.formatDate'}"
                            />
                            <Text
                                text="{parts: [
                                            {path: 'bills>total'}
                                            
                                        ], 
                                            type: 'sap.ui.model.type.Currency',
                                            formatOptions: {
                                                showMeasure: true,
                                                oLocate: 'en_UK'
                                            }}"
                            />
                            <!-- <Text text="{bills>status}" /> -->
                            <ObjectStatus
                                inverted="true"
                                text="{bills>status}"
                                state="{path: 'bills>status',
                                        formatter: '.formatter.formatBillStatus'}"
                            />
                            <HBox>
                                <Button
                                    icon="sap-icon://download"
                                    press=".onDownload"
                                    type="Default"
                                    enabled="{= ${bills>status} === 'CANCEL' ? false : true }"
                                />
                                <Button
                                    icon="sap-icon://sys-cancel-2"
                                    press=".onCancelOrder"
                                    type="Default"
                                    class="iconBtn"
                                    enabled="{= ${bills>status} === 'CANCEL' ? false : true }"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
