<core:FragmentDefinition
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="detailsDialog"
        contentHeight="60%"
    >
        <VBox
            id="editDialogContainer"
            alignContent="Center"
            alignItems="Baseline"
        >
            <FlexBox width="100%">
                <VBox>
                    <HBox>
                        <Label
                            id="editId"
                            visible="false"
                        />
                    </HBox>
                    <HBox>
                        <VBox>
                            <Label text="Customer:" />
                            <Input
                                id='editCustomer'
                                editable="false"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Exporter:" />
                            <Input
                                id="editExporter"
                                editable="false"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Status" />
                            <Label id="editStatus" />
                        </VBox>
                    </HBox>
                    <HBox>
                        <VBox>
                            <Label text="Address" />
                            <Input
                                id="editAddress"
                                value="243 Nguyen Van Linh"
                                editable="false"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Created At" />
                            <DatePicker
                                id="editDate"
                                editable="false"
                                value="{formatter: '.format.formatDate'}"
                            />
                        </VBox>
                    </HBox>
                    <Toolbar
                        class='separator'
                        width="100%"
                        height="1px"
                    />
                    <Label
                        text="Purchased Items"
                        design="Bold"
                    />
                    <VBox>
                        <HBox id="lbEditItemContainer">
                            <VBox width="177px">
                                <Label text="Item" />
                                <!-- <Input value="Knife" visible="false" /> -->
                            </VBox>
                            <VBox width="177px">
                                <Label text="Quantity" />
                                <!-- <Input visible="false" /> -->
                            </VBox>
                            <VBox>
                                <Label text="Unit price" />
                            </VBox>
                            <VBox>
                                <Label text="Total" />
                            </VBox>
                        </HBox>
                    </VBox>
                    <VBox id="vbEditItems" />
                    <Toolbar
                        class='separator'
                        width="100%"
                        height="1px"
                    />
                    <HBox>
                        <Label text="Subtotal: ($)" />
                        <Label
                            design="Bold"
                            id="editTotal"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
        </VBox>
        <beginButton>
            <Button
                id="btnUpdate"
                type="Accept"
                text="Update order to Paid"
                press=".onUpdateDialog"
                icon="sap-icon://accept"
            />
        </beginButton>
        <endButton>
            <Button
                id="btnCloseEdit"
                type="Reject"
                text="Close"
                icon="sap-icon://reset"
                press=".onCloseDialog($event, 'detailsDialog')"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
