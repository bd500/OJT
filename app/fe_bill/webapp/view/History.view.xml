<mvc:View
    xmlns:semantic="sap.f.semantic"
    xmlns:cards="sap.f.cards"
    xmlns:table="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    controllerName="febill.controller.History"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <ObjectHeader title="History" />

    <!-- <Page id="historyPage">
        <List
            id="historyList"
            items="{history>/value}"
        >
            <ObjectListItem title="{history>quantity}" />
        </List>
    </Page> -->
    <semantic:SemanticPage id="historyPage">
        <semantic:content>
            <Table items="{
                path:'history>/value'
            }">
                <columns>
                    <Column>
                        <Text text="Product's Name" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Change in stock" />
                    </Column>
                    <Column>
                        <Text text="Note" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{history>item/name}" />
                            <ObjectIdentifier
                                title="{path: 'history>date',
                                formatter: '.formatter.formatDate'}"
                            />
                            <ObjectNumber
                                number="{history>quantity}"
                                state="{path:'history>quantity', 
                                        formatter: '.formatter.formatItemChange'}"
                            />
                            <!-- <Text
                                textAlign="Center"
                                text="{history>note}"
                            /> -->
                            <ObjectStatus
                                inverted="true"
                                text="{history>note}"
                                state="{path: 'history>note',
                                        formatter: '.formatter.formatHistoryNote'}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
