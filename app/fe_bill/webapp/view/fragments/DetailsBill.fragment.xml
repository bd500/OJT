<core:FragmentDefinition
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Details"
        id="detailsDialog"
        contentHeight="60%"
    >
        <VBox
            id="editDialogContainer"
            alignContent="Center"
            alignItems="Baseline"
        >
            <HBox id="hbEditId">
                <Label text="ID: " />
                <Input
                    placeholder="ID"
                    id="editId"
                    required="true"
                    editable="false"
                />
            </HBox>
            <HBox id="hbEditCus">
                <Label text="Customer: " />
                <Input
                    placeholder="Customer's Name"
                    id="editCustomer"
                    required="true"
                    editable="false"
                />
            </HBox>
            <HBox id="hbEditEx">
                <Label text="Exporter: " />
                <Input
                    placeholder="Exporter's Name"
                    id="editExporter"
                    editable="false"
                />
            </HBox>
            <HBox id="hbEditDate">
                <Label text="Date:" />
                <DatePicker
                    id="editDate"
                    editable="false"
                    width="230px"
                />
            </HBox>
            <HBox id="hbStatus">
                <Label text="Status" />
                <Input
                    value="PAID"
                    editable="false"
                    id="txtStatus"
                />
            </HBox>
            <HBox>
                <Label text="Item" />
                <Label text="Quantity" />
                <Label text="Price per unit" />
            </HBox>
            <VBox id="vbEditItems" />
            <!-- <Button
                id="btnAddEditItem"
                type="Transparent"
                icon="sap-icon://add"
                text="Item"
                press=".onAppendEditItem"
                enabled="true"
            /> -->
            <HBox
                id="hbEditTotal"
                alignItems="End"
            >
                <Label text="Total: " />
                <Label id="editTotal" />
            </HBox>
        </VBox>
        <beginButton>
            <Button
                id="btnUpdate"
                type="Accept"
                text="Update order to Paid"
                press=".onUpdateDialog"
                icon="sap-icon://accept"
            />
        </beginButton>
        <endButton>
            <Button
                id="btnCloseEdit"
                type="Reject"
                text="Close"
                icon="sap-icon://reset"
                press=".onCloseDialog($event, 'detailsDialog')"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
