<mvc:View 
    controllerName="ns.items.controller.Details"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic">

    <VBox class="detailsContainer sapUiContentPadding">
        <!-- First Vertical Row for Item Info (Table-like) -->
        <HBox class="itemInfoRow">
            <items>
                <Text text="{detailsModel>/date}" class="sapUiLargeMarginEnd"/>
                <Text text="{detailsModel>/quantity}" class="sapUiLargeMarginEnd"/>
                <Text text="{detailsModel>/stock}" class="sapUiLargeMarginEnd"/>
            </items>
        </HBox>

        <!-- Second Half for History (List-like) -->
        <List items="{detailsModel>/history}" class="sapUiResponsiveMargin">
            <items>
                <StandardListItem title="{detailsModel>date}" description="{detailsModel>quantity}" />
            </items>
        </List>
    </VBox>
</mvc:View>
